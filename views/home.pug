extends layout 

block content
    .columns.has-text-centered.is-centered.m-6
        .column
            h2.subtitle Post
            form(action="/post" method="post").field
                textarea.textarea.my-2(rows=5 name="body" placeholder="Iâ€™ll have two number 9s a number 9 large a number 6 with extra dip,")
                .control.has-icons-left.my-2
                    input.input(type="number" name="price" placeholder="3.50")
                    span.icon.is-left: i.fa-solid.fa-dollar-sign
                    input.button.is-warning.is-fullwidth.mt-2(type="submit" value="Submit")
        .column
            h2.subtitle Posts
            table.table.is-bordered.is-striped.is-fullwidth
                thead
                    tr
                        th: abbr(title="Price") $
                        th Body
                        th Author
                tbody
                    each post in posts
                        tr
                            th=post.price
                            td: a(href="/post/"+post._id)=post.body
                            td: a(href="/user/"+post.author.username)=post.author.username
